<%- model_class = Alert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Time of Alert:</strong></dt>
  <dd><%= @alert.time_alert %></dd>
  
  <dt><strong>Recipients:</strong></dt>

  <% @reciplist = @alert.to_email.split(",").map(&:strip) %>
  <% @reciplist.each do |e| %>
  <dd> <%= e %> </dd>
  <% end %>
  <br>
  
  <dt><strong><%= model_class.human_attribute_name(:contents) %>:</strong></dt>
  <dd><%= @alert.contents %></dd> 
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alert_path(@alert), :class => 'btn btn-warning' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alert_path(@alert),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
