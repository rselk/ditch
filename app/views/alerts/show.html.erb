<%- model_class = Alert -%>
<div class="page-header">
  <h1>Alert Created</h1>

</div>
<table class="table table-striped">
    <thead>
      <tr>
        <th><h2 class="fancy">Info</h2></th>
        <th><h2 class="fancy"></h2></th>
      </tr>
    </thead>
    <tbody>
         <tr>
          <td>
          <h4> Alert Time: </h4>
           <span class="blacktext"> <%= @alert.time_alert %> </span>
         <h4>To: </h4>
         <span class="blacktext">
          <% @reciplist = @alert.to_email.split(",").map(&:strip) %>
           <% @reciplist.each do |e| %>
           <%= e %><br> 
           <% end %>
           </span>
          <h4>Contents: </h4> 
         <span class="blacktext"> <%= simple_format word_wrap(@alert.contents, :line_width => 80)%> </span>
          </td>

          <td>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alert_path(@alert), :class => 'btn btn-inverse' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alert_path(@alert),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-inverse' %>
          </td>
        </tr>
    </tbody>
  </table>
 <div class="span9 offset1">
  <%= link_to '<i class="icon-white icon-th-list"></i> Manage Alerts'.html_safe, manage_path, :class => "btn btn-inverse btn-large butmain" %>
  </div>