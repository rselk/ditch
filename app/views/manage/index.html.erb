<% if @alerts_false.size != 0 || @alerts_true.size != 0 || @txtalerts_true.size != 0 || @txtalerts_false.size != 0 %>


<%- model_class = Manage-%>

<% if @alerts_true.size != 0 || @txtalerts_true.size != 0 %>
  <div class="page-header">
    <h1>Sent Alerts</h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Info</th>
        <th>Recipients</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @alerts_true.each do |alert| %>
        <tr>
          <td><%= alert.time_alert %> <br><strong>Contents</strong><br><%= alert.contents %> </td>
           <td>
           <% @reciplist = alert.to_email.split(",").map(&:strip) %>
           <% @reciplist.each do |e| %>
           <%= e %><br> 
           <% end %>
           </td>
          <td>

            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        alert_path(alert),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% if @alerts_false.size != 0 || @txtalerts_false.size != 0 %>
    <h1>Unsent Alerts</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:time_alert) %></th>
        <th>Recipients</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @alerts_false.each do |alert| %>
        <tr>
          <td><%= alert.time_alert %> <br><strong>Contents</strong><br><%= alert.contents %> </td>
          <td><%= alert.to_email %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_alert_path(alert), :class => 'btn btn-success' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        alert_path(alert),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      <% @txtalerts_false.each do |alert| %>
        <tr>
          <td><%= alert.time_alert %> <br><strong>Contents</strong><br><%= alert.contents %> </td>
          <td><%= alert.to_sms%></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_txtalert_path(alert), :class => 'btn btn-success' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        txtalert_path(alert),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

<% else %>
  <h1>You have no alerts</h1>
  <br>
 <%= link_to '<i class="icon-white icon-th-list"></i> Add Alert'.html_safe, "addalert", :class => "btn btn-success btn-large butmain" %>  

<% end %>